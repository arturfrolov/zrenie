<header class='header' id='up'>
  <div class='header__subheader'>
    <div class='container'>
      <div class='row'>
        <div class='col-lg-2 d-flex align-self-center'>
          <a href='#' class='header__logo'>
            <img src='./icons/logo.svg' alt='logo'>
          </a>
        </div>
        <div class='col-lg-2'>
          {% include "../../components/phonecontacts/phonecontacts.twig" %}
        </div>
        <div class='col-lg-2'>
          {% include "../../components/schedule/schedule.twig" %}
        </div>
        <div class='col-lg-2'>
          {% include "../../components/follow-us/follow-us.twig" %}
        </div>
        <div class='col-lg-2 d-flex align-self-center'>
          <div class='search header__search'>
            <div class="wrap">
              <form action='#'>
                <input type="text" class="input" placeholder="Поиск">
                <svg class="search__icon header__search_icon js-search">
                  <use xlink:href="icons/sprite.svg#search"></use>
                </svg>
              </form>
            </div>
            <div class='header__search_text js-search'>Поиск</div>
          </div>
        </div>
        <div class='col-lg-2 d-flex align-self-center justify-content-end'>
          {% include "../../components/button/button.twig" %}
        </div>
      </div>
    </div>
  </div>
  <div class='header__md'>
    <div class='container'>
      <div class='row align-items-center justify-content-between'>
        <div class='col-auto order-2 col-sm-4 order-md-1 col-md-3 d-flex justify-content-start'>
          <a href='#' class='header__logo'>
            <img src='./icons/logo.svg' alt='logo'>
          </a>
        </div>
        <div class='col-auto order-1 col-sm-1 order-md-2 offset-md-7 col-md-1'>
          <svg class="header__callback" data-bs-toggle="modal" data-bs-target="#myModal">
            <use xlink:href="icons/sprite.svg#phone"></use>
          </svg>
        </div>
        <div class='col-auto order-3 col-sm-1 order-md-3 col-md-1 d-flex justify-content-end'>
          <div class='hamburger js-hamburger'>
            <span></span>
            <span></span>
            <span></span>
          </div>
        </div>
      </div>
    </div>
  </div>
  {% include "../../components/menu/menu.twig" %}
</header>
